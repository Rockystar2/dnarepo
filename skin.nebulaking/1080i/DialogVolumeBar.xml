                <posy>33</posy>
                <height>117</height>
                <width>1800</width>
                <scroll>true</scroll>
                <align>center</align>
                <font>InfoTitleFont</font>
                <include>TextColor_MainColor</include>
                <label>$LOCALIZE[13376]: $INFO[Control.GetLabel(20)]</label>
            </control>
        </control>
    </controls>
</window>
