<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <zorder>2</zorder>
    <controls>
        <control type="group">
            <visible>![Window.IsActive(DialogFullScreenInfo.xml)
                |[
                Player.HasMedia |
                Window.IsActive(VideoOSD.xml) |
                window.isvisible(MusicOSD.xml)
                ]]</visible>
            <include>NotificationOpenClose</include>
            <posy>0</posy>
            <control type="image">
                <posx>-200</posx>
                <posy>0</posy>
                <width>2320</width>
                <height>183</height>
                <texture border="150,40,150,40">$VAR[Theme.Color]/common/bg_dialog.png</texture>
            </control>
            <control type="progress" id="32">
                <include>ConditionWhite</include>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>14</height>
                <texturebg border="1,1,1,1">white/OSD/osd_progress_background.png</texturebg>
                <midtexture border="1,1,5,1">white/OSD/osd_progress_mid.png</midtexture>
                <righttexture>-</righttexture>
                <lefttexture>-</lefttexture>
            </control>
            <control type="progress" id="32">
                <include>ConditionBlack</include>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>14</height>
                <texturebg border="1,1,1,1">black/OSD/osd_progress_background.png</texturebg>
                <midtexture border="1,1,5,1">black/OSD/osd_progress_mid.png</midtexture>
                <righttexture>-</righttexture>
                <lefttexture>-</lefttexture>
            </control>
            <control type="label" id="30">
                <posx>TextMargin</posx>
                <posy>55</posy>
                <height>30</height>
                <width>1800</width>
                <scroll>true</scroll>
                <align>center</align>
                <font>NotificationFontDouble</font>
                <include>TextColor_AlternateColor</include>
            </control>
            <control type="label" id="31">
                <posx>TextMargin</posx>
                <posy>95</posy>
                <height>41</height>
                <width>1800</width>
                <scroll>true</scroll>
                <align>center</align>
                <font>NotificationFont</font>
                <include>TextColor_MainColor</include>
            </control>
        </control>
    </controls>
</window>
