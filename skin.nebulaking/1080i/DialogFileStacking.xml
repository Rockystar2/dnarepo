<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">450</defaultcontrol>
    <controls>
        <!-- <include>DimBG</include> -->
        <include>TopBar</include>
        <include>DialogOpenClose</include>
        <control type="group">
            <include>FacadeFadeDialogs3rdLevelCondition</include>
            <include>Icon_Fade</include>
            <control type="image">
                <posx>-760</posx>
                <posy>150</posy>
                <width>2930</width>
                <height>876</height>
                <include>DialogTransparency</include>
                <texture border="150,40,150,40">$VAR[Theme.Color]/common/bg_dialog.png</texture>
            </control>
            <control type="image">
                <posx>100</posx>
                <posy>142</posy>
                <width>1720</width>
                <height>217</height>
                <texture border="100">$VAR[Theme.Color]/common/bg_list.png</texture>
            </control>
            <control type="label">
                <posx>TextMargin</posx>
                <posy>183</posy>
                <width>1800</width>
                <height>135</height>
                <align>center</align>
                <font>InfoTitleFont</font>
                <include>TextColor_MainColor</include>
                <info>ListItem.Label</info>
            </control>
            <control type="list" id="450">
                <posx>0</posx>
                <posy>318</posy>
                <width>1920</width>
                <height>675</height>
                <onleft>450</onleft>
                <onright>450</onright>
                <onup>450</onup>
                <ondown>450</ondown>
                <itemlayout width="1920" height="75">
                    <control type="label">
                        <posx>TextMargin</posx>
                        <height>75</height>
                        <width>1800</width>
                        <align>center</align>
                        <font>FacadeListMainFont</font>
                        <include>TextColor_AlternateColor</include>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="1920" height="75">
                    <control type="group">
                        <include>ButtonWideFocusAnimation</include>
                        <control type="image">
                            <posx>0</posx>
                            <posy>0</posy>
                            <height>75</height>
                            <width>1920</width>
                            <texture border="1">$VAR[Theme.Color]/list/bg_facade_focus.png</texture>
                        </control>
                        <control type="label">
                            <posx>TextMargin</posx>
                            <height>75</height>
                            <width>1800</width>
                            <align>center</align>
                            <font>FacadeListMainFont</font>
                            <include>TextColor_MainColor</include>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>
