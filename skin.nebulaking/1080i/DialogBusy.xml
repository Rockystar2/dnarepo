<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <controls>
        <control type="group">
            <include>NotificationOpenClose</include>
            <control type="image">
                <posx>-200</posx>
                <posy>0</posy>
                <width>2320</width>
                <height>183</height>
                <texture border="150,40,150,40">$VAR[Theme.Color]/common/bg_dialog.png</texture>
            </control>
            <control type="progress" id="10">
                <include>ConditionWhite</include>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>14</height>
                <texturebg border="1,1,1,1">white/OSD/osd_progress_background.png</texturebg>
                <midtexture border="1,1,5,1">white/OSD/osd_progress_mid.png</midtexture>
                <righttexture>-</righttexture>
                <lefttexture>-</lefttexture>
            </control>
            <control type="progress" id="10">
                <include>ConditionBlack</include>
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>14</height>
                <texturebg border="1,1,1,1">black/OSD/osd_progress_background.png</texturebg>
                <midtexture border="1,1,5,1">black/OSD/osd_progress_mid.png</midtexture>
                <righttexture>-</righttexture>
                <lefttexture>-</lefttexture>
            </control>
            <control type="label" id="1">
                <visible>IntegerGreaterThan(Control.GetLabel(10), 0)</visible>
                <posx>TextMargin</posx>
                <posy>33</posy>
                <height>117</height>
                <width>1800</width>
                <scroll>true</scroll>
                <align>center</align>
                <font>NotificationFontDouble</font>
                <include>TextColor_MainColor</include>
                <label>$LOCALIZE[31979]$INFO[Control.GetLabel(10), ,%]</label>
            </control>
            <control type="label">
                <visible>!IntegerGreaterThan(Control.GetLabel(10), 0)</visible>
                <posx>TextMargin</posx>
                <posy>33</posy>
                <height>117</height>
                <width>1800</width>
                <scroll>true</scroll>
                <align>center</align>
                <font>NotificationFontDouble</font>
                <include>TextColor_MainColor</include>
                <label>$LOCALIZE[31979]</label>
            </control>
        </control>
    </controls>
</window>
